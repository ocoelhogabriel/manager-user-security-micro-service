# Estágio 1: Build da aplicação com Maven e Java 21
FROM maven:3.9-eclipse-temurin-21 AS build
# ... (o resto do estágio 1 fica igual)
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn clean package -DskipTests

# Estágio 2: Imagem final, otimizada e leve
FROM eclipse-temurin:21-jre-jammy

# DECLARA O ARGUMENTO QUE RECEBEMOS DO DOCKER-COMPOSE
ARG CONFIG_REPO_PATH

WORKDIR /app

# USA O ARGUMENTO EM VEZ DO CAMINHO RELATIVO
COPY ./config-repo ./config-repo

# Copia o .jar gerado do estágio de build
COPY --from=build /app/target/*.jar app.jar

EXPOSE 8888
ENTRYPOINT ["java", "-jar", "app.jar"]